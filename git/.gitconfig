[user]
	name = Derek Daniels
	email = dbdaniel@mtu.edu
	signingkey = /home/dbd/.ssh/id_ed25519.pub
[alias]
    s = status
    t = !git --no-pager tag
    ap = add -p
    fa = fetch --all
    co = checkout
    l = log --graph --abbrev-commit --decorate --format=format:'%C(bold blue)%h%C(reset) - %C(bold green)(%ar)%C(reset) %C(white)%s%C(reset) %C(dim white)- %an%C(reset)%C(bold yellow)%d%C(reset)' --all
    branches = branch --all
    mpr = pull-request -p
    can = commit --amend --no-edit
[hub]
	protocol = https
[commit]
    verbose = true
[push]
    autoSetupRemote = true
[pull]
	rebase = true
[credential "https://github.com"]
	helper = 
	helper = !/usr/bin/gh auth git-credential
[credential "https://gist.github.com"]
	helper = 
	helper = !/usr/bin/gh auth git-credential
[gpg]
	format = ssh
[diff]
    tool = nvimdiff
[filter "lfs"]
	clean = git-lfs clean -- %f
	smudge = git-lfs smudge -- %f
	process = git-lfs filter-process
	required = true
[core]
	pager = cat
